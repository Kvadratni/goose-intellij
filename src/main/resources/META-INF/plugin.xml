<idea-plugin>
  <id>com.block.goose-intellij</id>
  <name>Goose</name>
  <vendor email="mnovich@squareup.com">Max Novich</vendor>
  <description><![CDATA[
    Goose is a programming agent that runs on your machine. You need goose-ai package installed for this to work. goose: https://github.com/square/goose
  ]]></description>

  <!-- Product and plugin compatibility requirements -->
  <depends>com.intellij.modules.platform</depends>
  <!-- Register Actions -->
  <actions>
    <action id="com.block.gooseintellij.OpenGooseTerminalAction"
        class="com.block.gooseintellij.OpenGooseTerminalAction"
        text="Open Goose Terminal"/>
    <action id="com.block.gooseintellij.SendToGooseAction"
        class="com.block.gooseintellij.SendToGooseAction"
        text="Send to Goose"/>
  </actions>
  <!-- Extension points defined by the plugin -->
  <extensions defaultExtensionNs="com.intellij">

    <!-- Register Tool Window -->
    <toolWindow id="Goose Terminal"
        anchor="bottom"
        factoryClass="com.block.gooseintellij.GooseTerminalToolWindowFactory"/>
    
    <!-- Register Listeners -->
    <projectService serviceImplementation="com.block.gooseintellij.GooseFileTracker"/>
  </extensions>
</idea-plugin>
